{
  "compilerOptions": {
    // Output
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Language & Module
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // Type checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Style & Safety
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

    "types": ["node"]
  },
  "include": ["src"]
}
